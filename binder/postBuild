#!/bin/bash
set -e

# Configure R_HOME if R exists
if command -v R &> /dev/null; then
    export R_HOME=$(R RHOME)
    echo "export R_HOME=$R_HOME" >> ${HOME}/.bashrc
    echo "export R_HOME=$R_HOME" >> ${HOME}/.profile
fi

# Install rpy2 3.4.5
pip install --no-cache-dir rpy2==3.4.5

# Configure IRkernel
R -e "IRkernel::installspec(user=FALSE)"
