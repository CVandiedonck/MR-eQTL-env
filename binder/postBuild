#!/bin/bash
set -e

echo "=== Installing MendelianRandomization from CRAN ==="
Rscript -e "install.packages('MendelianRandomization', repos='https://cloud.r-project.org')"

echo "=== Registering Jupyter kernels ==="
Rscript -e "IRkernel::installspec(user=FALSE, name='ir43', displayname='R 4.3')"
python -m ipykernel install --user --name python3 --display-name "Python 3.10"

echo "=== Done ==="
