#!/bin/bash
set -e

echo "=== Installing rpy2 3.4.5 (last stable with auto-conversions) ==="
pip install rpy2==3.4.5

echo "=== Registering R kernel ==="
Rscript -e "IRkernel::installspec(user=FALSE, name='ir43', displayname='R 4.3')"

echo "=== Verification ==="
echo "rpy2 version:"
python -c "import rpy2; print(rpy2.__version__)"
echo "R version:"
R --version | head -1

echo "=== Done ==="
